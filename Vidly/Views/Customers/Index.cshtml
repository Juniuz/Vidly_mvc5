@model IEnumerable<Vidly.Models.Customer>
    @{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <h3>We don't have any customers yet! Dang.</h3>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cust in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@cust.Name, "Details", "Customers", new { id = cust.Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}